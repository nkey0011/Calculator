<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideWest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideNorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideSouth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="32dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideEast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="32dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|end"
        android:text="@string/_0"
        android:textSize="48sp"
        app:layout_constraintEnd_toStartOf="@+id/guideEast"
        app:layout_constraintStart_toStartOf="@+id/guideWest"
        app:layout_constraintTop_toTopOf="@+id/guideNorth" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="48dp"
        android:layout_height="61dp"
        android:layout_marginStart="20dp"
        android:text="@string/_7"
        app:layout_constraintStart_toStartOf="@+id/guideWest"
        tools:layout_editor_absoluteY="106dp" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="48dp"
        android:layout_height="59dp"
        android:text="@string/_8"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="106dp" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="49dp"
        android:layout_height="54dp"
        android:text="@string/_9"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="109dp" />

    <Button
        android:id="@+id/btnRoot"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:text="@string/btnRoot"
        tools:layout_editor_absoluteX="241dp"
        tools:layout_editor_absoluteY="109dp" />

    <Button
        android:id="@+id/btnClear"
        android:layout_width="61dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"
        android:text="@string/c"
        app:layout_constraintEnd_toStartOf="@+id/guideEast"
        tools:layout_editor_absoluteY="106dp" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="58dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:text="@string/_4"
        app:layout_constraintStart_toStartOf="@+id/guideWest"
        tools:layout_editor_absoluteY="203dp" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="62dp"
        android:layout_height="52dp"
        android:text="@string/_5"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="202dp" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:text="@string/_6"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="202dp" />

    <Button
        android:id="@+id/btnDiv"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:text="@string/btnDiv"
        tools:layout_editor_absoluteX="244dp"
        tools:layout_editor_absoluteY="202dp" />

    <Button
        android:id="@+id/btnPerc"
        android:layout_width="67dp"
        android:layout_height="49dp"
        android:layout_marginEnd="8dp"
        android:text="@string/btnPerc"
        app:layout_constraintEnd_toStartOf="@+id/guideEast"
        tools:layout_editor_absoluteY="205dp" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="53dp"
        android:layout_height="59dp"
        android:layout_marginStart="12dp"
        android:text="@string/_1"
        app:layout_constraintStart_toStartOf="@+id/guideWest"
        tools:layout_editor_absoluteY="270dp" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="48dp"
        android:layout_height="54dp"
        android:text="@string/_2"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="270dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="56dp"
        android:layout_height="65dp"
        android:text="@string/_3"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="270dp" />

    <Button
        android:id="@+id/btnMulti"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:text="@string/btnMulti"
        tools:layout_editor_absoluteX="251dp"
        tools:layout_editor_absoluteY="270dp" />

    <Button
        android:id="@+id/btnMin"
        android:layout_width="65dp"
        android:layout_height="53dp"
        android:layout_marginEnd="12dp"
        android:text="@string/btnMin"
        app:layout_constraintEnd_toStartOf="@+id/guideEast"
        tools:layout_editor_absoluteY="271dp" />

    <Button
        android:id="@+id/btnSign"
        android:layout_width="58dp"
        android:layout_height="52dp"
        android:layout_marginStart="12dp"
        android:text="@string/btnSign"
        app:layout_constraintStart_toStartOf="@+id/guideWest"
        tools:layout_editor_absoluteY="360dp" />

    <Button
        android:id="@+id/btn0"
        android:layout_width="61dp"
        android:layout_height="49dp"
        android:text="@string/_0"
        tools:ignore="DuplicateSpeakableTextCheck"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="364dp" />

    <Button
        android:id="@+id/btnDec"
        android:layout_width="63dp"
        android:layout_height="48dp"
        android:text="@string/btnDec"
        tools:layout_editor_absoluteX="181dp"
        tools:layout_editor_absoluteY="365dp" />

    <Button
        android:id="@+id/btnPlus"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:text="@string/btnPlus"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="364dp" />

    <Button
        android:id="@+id/btnEql"
        android:layout_width="56dp"
        android:layout_height="48dp"
        android:layout_marginEnd="8dp"
        android:text="@string/btnEql"
        app:layout_constraintEnd_toStartOf="@+id/guideEast"
        tools:layout_editor_absoluteY="367dp" />

</androidx.constraintlayout.widget.ConstraintLayout>